<%= render "shared/header" %>
<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}のキッチン"%>
      </h2>
      <div class="prof">
        <div>
          <div class="pic">写真</div>
          <table class="table">
            <tbody>
              <tr>
                <th class="table__col1">名前</th>
                <td class="table__col2"><%= @user.nickname %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="my-chart">
          グラフ
        </div>
      </div>
      <h2 class="recipes">
        <%= "#{@user.nickname}さんのレシピ"%>
      </h2>
      <div class="user__card">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <%#= render partial: 'prototypes/prototype', collection: @prototypes %>
      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
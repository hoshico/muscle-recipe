<%= render "shared/header" %>
<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}のキッチン"%>
      </h2>
      <div class="prof">
        <div>
          <div class="pic">写真</div>
          <table class="table">
            <tbody>
              <tr>
                <th class="table__col1">名前</th>
                <td class="table__col2"><%= @user.nickname %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="my-chart">
          <p>グラフ</p>
          <%= pie_chart @mypfc_chart, width: "320px", height: "320px", colors: ["red", "orange", "blue"] %>
        </div>
      </div>
      <h2 class="recipes">
        <%= "#{@user.nickname}さんのレシピ"%>
      </h2>
      
      <div class="user_card_collection">
        <div class="post-wrapper"> 
          <%= render partial: 'shared/menu', collection: @menus %> 
        </div>
      </div>

    </div>
  </div>
</div>
<%= render "shared/footer" %>